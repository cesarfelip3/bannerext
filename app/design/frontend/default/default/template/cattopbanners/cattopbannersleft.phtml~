$routeName = Mage::app()->getRequest()->getRouteName();
$identifier = Mage::getSingleton('cms/page')->getIdentifier();

$_currPageIdentifier = '';
$_adbannerdisplayConditionField = '';
if($routeName == 'cms' && $identifier == 'home') {
$_currPageIdentifier = 'home';
$_adbannerdisplayConditionField = 'poshome';
} else if(Mage::registry('product')){
$_currPageIdentifier = 'product';
$_adbannerdisplayConditionField = 'posprod';
} else if(Mage::registry('current_category')){
$_currPageIdentifier = 'category';
$_adbannerdisplayConditionField = 'poscat';
}

$adbanner_model = Mage::getModel('adbanner/adbanner');
                      
if(Mage::getStoreConfig('adbanner/advbanneradvancedsettings/advbannerdisplayrandomlyenabled',Mage::app()->getStore())) {
    $collection = $adbanner_model->getCollection()
		->addFieldToFilter($_adbannerdisplayConditionField,'1')
		->addFieldToFilter('status','1')
		->addFieldToFilter('posleft','1');
    $collection->getSelect()
    ->order(new Zend_Db_Expr('RAND()'))
    ->limit('1');
} else {    
    $_advbannerID = Mage::getStoreConfig('adbanner/advbanneradvancedsettings/advbannerid',Mage::app()->getStore());
    $collection = $adbanner_model->getCollection()
		->addFieldToFilter($_adbannerdisplayConditionField,'1')
                ->addFieldToFilter('status','1')
                ->addFieldToFilter('adbanner_id',$_advbannerID)
		->addFieldToFilter('posleft','1');    
}
    
                //echo $collection->getSelect(); exit;
                //var_dump($collection->getData());
                /*$collection->setPageSize(5);
                $collection->setCurPage(2);
                $size = $collection->getSize();
                $cnt = count($collection);*/
foreach ($collection as $item){ 
    $_advBannerTitle = '';                   
    if(Mage::getStoreConfig('adbanner/advbanneradvancedsettings/advbannerdisplaylabelenabled',Mage::app()->getStore())){
        $_advBannerTitle = '<div style="clear:both;">'.$item->getTitle().'</div>';
    }
    
    $styleStr = '';
    $styleOuterStr = '';
    $_height = Mage::getStoreConfig('adbanner/advbanneradvancedsettings/advbannerimgheight',Mage::app()->getStore());
    if($_height != '' && is_numeric($_height)){
       $styleStr = 'max-height:'.$_height.'px;';
       $styleOuterStr = 'max-height:'.($_height+2).'px;';
    }
    
    $_width = Mage::getStoreConfig('adbanner/advbanneradvancedsettings/advbannerimgwidth',Mage::app()->getStore());
    if($_width != '' && is_numeric($_height)){
       $styleStr .= 'max-width:190px; width:'.$_width.'px;'; 
       $styleOuterStr .= 'max-width:190px; width:'.($_width+2).'px;'; 
    }
    
    $_borderFlag = Mage::getStoreConfig('adbanner/advbanneradvancedsettings/advbannerimgborderenabled',Mage::app()->getStore());
    $_border = '0';
    if($_borderFlag){
        $_border = '1';
        $styleStr .= 'border:1px solid;'; 
        $styleOuterStr .= 'border:1px solid;';
    }    
    
    if($item->getAdvmode() == 0){    
    echo $_advBannerTitle; 
?>
<div style="<?php echo $styleStr; ?>">
<?php echo $item->getAdvcode(); ?>
</div>
<?php         
    } else if($item->getAdvmode() == 1){    
?>

<div class="block">
        <div class="block-title">
            <strong><span><?php echo $_advBannerTitle; ?></span></strong>
        </div>
        <div class="block-content" align="center">
	<div style="<?php echo $styleOuterStr; ?>"><a href="<?php echo $item->getBannerlink(); ?>" target="_blank" style="color:#FFF; text-decoration:none;"><img src="<?php echo Mage::getBaseUrl('media').$item->getImgfilename(); ?>" border="<?php echo $_border; ?>" style="<?php echo $styleStr; ?>" alt="<?php echo $item->getTitle(); ?>" title="<?php echo $item->getTitle(); ?>" /></a>
	</div>
	</div>
    </div>

<?php    
    }
}
?> 
